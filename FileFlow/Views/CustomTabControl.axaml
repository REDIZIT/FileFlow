<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="FileFlow.Views.CustomTabControl">
  <Button
      Name="btn"
      Height="28" Padding="16, 0" CornerRadius="6"
      Classes="Item" Margin="0, 2, 2, 0" Classes.ActiveTab="{Binding IsActiveTab}">
    <TextBlock Text="{Binding Title}" FontSize="11" VerticalAlignment="Center"/>
  </Button>
</UserControl>
