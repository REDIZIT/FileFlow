<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:FileFlow.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FileFlow.Views.MainWindow"
        xmlns:local="clr-namespace:FileFlow.Views"
        xmlns:l="clr-namespace:FileFlow.ViewModels"
        Icon="/Assets/avalonia-logo.ico"
        Title="FileFlow">

  <Window.Background>
    <ImageBrush 
      Source="/Assets/wallpaper.jpg" 
      Stretch="UniformToFill"
      Opacity="1"
      BitmapInterpolationMode="HighQuality"/>
  </Window.Background>

  

  <Window.Styles>
    <Style Selector="TextBox.path">
      <Setter Property="Background" Value="#aa262626"/>
      <Setter Property="BorderBrush" Value="#000"/>
    </Style>
    
  </Window.Styles>


  <Grid RowDefinitions="*, 32" Background="#EE141414">
    <Grid Name="explorerGrid" ColumnDefinitions="200, 2, *, 2, *" Grid.Row="0" Background="#0000">
      <Grid.Styles>
        <Style Selector="Button.Item">
          <Setter Property="Padding" Value="0"/>
          <Setter Property="CornerRadius" Value="6"/>
          <Setter Property="Margin" Value="0, 1"/>
          <Setter Property="Background" Value="#2f656565"/>
          <Setter Property="Opacity" Value="1"/>
          <Setter Property="Transitions">
            <Transitions>
              <DoubleTransition Property="Opacity" Duration="0:0:0.1"/>
              <TransformOperationsTransition Property="RenderTransform" Duration="0:0:0.1"/>
            </Transitions>
          </Setter>
        </Style>
        <Style Selector="Button.Item:pointerover">
          <Setter Property="Background" Value="#a444"/>
        </Style>
        <Style Selector="Button.Item:pressed">
          <Setter Property="RenderTransform" Value="scale(0.98)"/>
        </Style>
        <Style Selector="Button.Item:pressed /template/ ContentPresenter">
          <Setter Property="Background" Value="#a555"/>
        </Style>

        <Style Selector="GridSplitter">
          <Setter Property="Background" Value="#333"/>
          <Setter Property="MinWidth" Value="0"/>
          <Setter Property="Width" Value="2"/>
        </Style>

      </Grid.Styles>

      <Grid.Resources>
        <!--Only selected-->
        <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush" Color="#a555" />
        <!--Selected and hovered-->
        <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="#a666" />
        <!--Pressed (may be not selected)-->
        <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush" Color="#a555" />

        <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#a444"/>
      </Grid.Resources>

      <StackPanel>
        <Border Height="42" Background="#a222" BorderBrush="#444" BorderThickness="0, 0, 0, 1">

        </Border>
        <StackPanel Grid.Column="0" Margin="4,4,4,0">

          <Button Height="36" Classes="Item" HorizontalAlignment="Stretch">
            <Panel>
              <Panel VerticalAlignment="Top" Height="30">
                <Image VerticalAlignment="Bottom" Source="/Assets/Icons/disk.png" Height="16" Width="16" HorizontalAlignment="Left" Margin="12, 8"/>
                <TextBlock VerticalAlignment="Bottom" Text="Локальный диск (C:/)" FontSize="11" Margin="32, 9"/>
                <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Right" Text="54%" FontSize="9" Margin="12, 10" Foreground="#a999"/>
              </Panel>
              <ProgressBar MinWidth="0" Value="50" Margin="12, 6" VerticalAlignment="Bottom" Background="#6111" Foreground="#c5c5c5" Height="3" MinHeight="0"/>
            </Panel>
          </Button>
        </StackPanel>
      </StackPanel>
      <GridSplitter Grid.Column="1" ResizeDirection="Columns"/>
      <ContentControl Grid.Column="2" Name="explorerPlaceholder"/>
      <GridSplitter Grid.Column="3" ResizeDirection="Columns"/>
      <ContentControl Grid.Column="4" Name="explorerPlaceholder2"/>
    </Grid>
    <TextBox Grid.Row="1" Text="444" Name="statusText"/>
  </Grid>



</Window>
