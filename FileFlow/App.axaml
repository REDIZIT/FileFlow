<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:FileFlow"
             x:Class="FileFlow.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Dark"/>
        <Style Selector="TextBlock">
          <Setter Property="TextBlock.FontFamily" Value="Segoe UI"/>
        </Style>
    </Application.Styles>

  <Application.Resources>
    <!--Only selected-->
    <SolidColorBrush x:Key="SystemControlHighlightListAccentLowBrush" Color="#a555" />
    <!--Selected and hovered-->
    <SolidColorBrush x:Key="SystemControlHighlightListAccentMediumBrush" Color="#a666" />
    <!--Pressed (may be not selected)-->
    <SolidColorBrush x:Key="SystemControlHighlightListAccentHighBrush" Color="#a555" />

    <SolidColorBrush x:Key="SystemControlHighlightListLowBrush" Color="#a444"/>


    <SolidColorBrush x:Key="Error">#F35</SolidColorBrush>

    <!--Combo box-->
    <!--Default-->
    <SolidColorBrush x:Key="ComboBoxBackground">#222</SolidColorBrush>
    <SolidColorBrush x:Key="ComboBoxBorderBrush">#555</SolidColorBrush>
    <!--Disabled-->
    <SolidColorBrush x:Key="ComboBoxBackgroundDisabled">#a222</SolidColorBrush>
    <SolidColorBrush x:Key="ComboBoxBorderBrushDisabled">#a444</SolidColorBrush>
    
  </Application.Resources>
  
</Application>
